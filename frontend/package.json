{
  "name": "process-mining-v5",
  "private": true,
  "version": "5.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:goldenset": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/goldenset",
    "sync:check": "node scripts/check-rules-sync.cjs",
    "test:guard": "npm run sync:check && npm run test:goldenset",
    "test:e2e": "playwright test tests/e2e/core-flows.spec.ts",
    "test:e2e:ui": "playwright test tests/e2e/core-flows.spec.ts --ui",
